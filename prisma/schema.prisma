generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Status {
  Completed
  Scheduled
}

model Trip {
  id             String      @id 
  destination    String
  from           DateTime?
  till           DateTime?
  hotel          String?  @default("N/A")
  hotelCost      Decimal? @default(0.00) @db.Decimal(5, 2)
  transportMode  String?  @default("Unknown")
  transportCost  Decimal? @default(0.0) @db.Decimal(5, 2)
  latitude       Decimal? @default(0.0)  @db.Decimal(9, 6)
  longitude      Decimal? @default(0.0)  @db.Decimal(9, 6)
  status         Status?  @default(Completed)
  notes          String?  @default("")
}
